{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "common/*": [
        "src/components/*"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    },
    "sourceMap": true,
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "Styled"
        ]
      }
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "locale": "zh-CN",
    "experimentalDecorators": true // 启用装饰器语法 @
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "platforms",
    "plugins",
    "www"
  ]
}
