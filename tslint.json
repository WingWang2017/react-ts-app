{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-console": false,
    "no-debugger": true,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-empty": false,
    "no-string-literal": false,
    "semicolon": [
      true,
      "always"
    ],
    "max-classes-per-file": [
      true,
      2,
      "exclude-class-expressions"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "www/**/*.js"
    ]
  }
}
